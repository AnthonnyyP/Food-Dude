<%- include('../partials/header') %>


<% recipes.forEach(function(p) { %>
  <div id = "food-card">
  <div id = "post-img-left">
  <img  src = "<%= p.image %>"
width = "300"
  >
  </div>

  <div id = "post-text-right">
  <h1> <a id = "posts-details" href = "/recipes/<%= p._id %> "> <%= p.title %> </a> </h1>
    <p> <%= p.description %> </p>
    <a href="/recipes/<%= p._id %>">More Details</a>
  </div>
</div>
<% }) %>

<%- include('../partials/footer') %>
